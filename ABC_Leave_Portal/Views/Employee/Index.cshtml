@model IEnumerable<ABC_Leave_Portal.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SupervisorCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LeavePackage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SupervisorCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LeavePackage)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EmployeeCode }) |
            @Html.ActionLink("Details", "Details", new { id=item.EmployeeCode }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EmployeeCode })
        </td>
    </tr>
}

</table>
