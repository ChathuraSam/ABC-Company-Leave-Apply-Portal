@model ABC_Leave_Portal.Models.LeaveEntry

@{
    ViewBag.Title = "LeaveApply";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Leave Entry</h4>
        <hr />
        @Html.ValidationSummary(true)


        <div class="card horizontal">

            <div class="card-stacked">
                <div class="card-content">


                    <div class="form-group">
                        @Html.LabelFor(model => model.EmployeeCode, "Employee Code", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">

                            @Html.EditorFor(model => model.EmployeeCode, new { @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.EmployeeCode)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LeaveTypeId, "Leave Type Id", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @*@Html.DropDownList("LeaveTypeId", String.Empty)*@
                            @Html.EditorFor(model => model.LeaveTypeId)
                            @Html.ValidationMessageFor(model => model.LeaveTypeId)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.RequestedDate, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.RequestedDate)
                            @Html.ValidationMessageFor(model => model.RequestedDate)
                        </div>
                    </div>

                    

                    <div class="form-group">
                        @Html.LabelFor(model => model.CommentsEmployee, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CommentsEmployee)
                            @Html.ValidationMessageFor(model => model.CommentsEmployee)
                        </div>
                    </div>

                    

                    <div class="form-group">
                        @Html.LabelFor(model => model.AutoNumber, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.AutoNumber)
                            @Html.ValidationMessageFor(model => model.AutoNumber)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
